<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listings.ListDays">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type - Category"
        android:textSize="@dimen/font_type_title"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_margin="2dp"
        android:id="@+id/txtTypeCategory"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Month Year"
        android:textSize="@dimen/font_category_title"
        android:textColor="#fff"
        android:background="@android:color/holo_blue_light"
        android:textAlignment="center"
        android:layout_margin="2dp"
        android:layout_below="@id/txtTypeCategory"
        android:id="@+id/txtMonthYear"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerDays"
        android:layout_above="@id/txtMonthTotal"
        android:layout_below="@id/txtMonthYear"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/txtMonthTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:background="@android:color/holo_red_light"
        android:text="Category"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/font_category_title" />

</RelativeLayout>